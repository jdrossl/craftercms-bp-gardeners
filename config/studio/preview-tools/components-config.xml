<?xml version="1.0" encoding="UTF-8"?>
<!--
    This file configures the drag-and-drop components available in the Preview Tools. Those components can then
    be dragged and dropped on a drop-zone within a page.

    The structure of this file is:

    <config>
        <category> (list of components that can be created on the fly during the drag and drop)
            <label />
            <component>
                <label />
                <type /> (reference content type of the component)
                <path /> (where to store these components)
            </component>
        </category>
        <browse> (list of browse paths of where to find ready components to be dragged/dropped)
            <label />
            <path /> (where to look for)
        </browse>
    </config>
-->
<config>
	<category>
		<label>New Sections</label>
        <component>
                <label>Cover</label>
                <type>/component/cover</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Features</label>
                <type>/component/features</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Statement</label>
                <type>/component/statement</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Action Card</label>
                <type>/component/action-card</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Portfolio</label>
                <type>/component/portfolio</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Team</label>
                <type>/component/team</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Brands</label>
                <type>/component/brands</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Carousel</label>
                <type>/component/team</type>
                <path>/site/components</path>
        </component>
        <component>
                <label>Action Call</label>
                <type>/component/action-call</type>
                <path>/site/components</path>
        </component>
	</category>
    <browse>
         <label>Existing sections</label>
         <path>/site/components/sections</path>
    </browse>
</config>
